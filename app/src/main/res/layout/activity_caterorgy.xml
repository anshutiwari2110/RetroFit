<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".CaterorgyActivity">

    <TextView
        android:id="@+id/tv_marquee_text"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:fontFamily="@font/alegreya_sc_bold_italic"
        android:text="TOP NEWS OF THE DAY"
        android:onClick="onTopNewsClicked"
        android:textSize="20dp"
        android:textColor="#ff0000"
        android:gravity="center"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageButton
        android:id="@+id/iv_business"
        android:layout_width="114dp"
        android:layout_height="114dp"
        android:layout_marginStart="196dp"
        android:layout_marginTop="50dp"
        android:background="@drawable/business_bg"
        android:onClick="onBusinessPressed"
        android:src="@drawable/ic_baseline_attach_money_24"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.117"
        app:layout_constraintStart_toStartOf="@+id/iv_sports"
        app:layout_constraintTop_toBottomOf="@+id/tv_marquee_text" />

    <ImageButton
        android:id="@+id/iv_sports"
        android:layout_width="114dp"
        android:layout_height="114dp"
        android:layout_marginTop="50dp"
        android:background="@drawable/business_bg"
        android:onClick="onSportsPressed"
        android:src="@drawable/ic_sports"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.168"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_marquee_text" />

    <TextView
        android:id="@+id/tv_sports"
        android:layout_width="114dp"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_marginTop="8dp"
        android:text="Sports"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.168"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/iv_sports" />

    <TextView
        android:id="@+id/tv_business"
        android:gravity="center"
        android:layout_width="114dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="Business"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.661"
        app:layout_constraintStart_toEndOf="@+id/tv_sports"
        app:layout_constraintTop_toBottomOf="@+id/iv_business" />

    <ImageButton
        android:id="@+id/ib_health"
        android:layout_width="114dp"
        android:layout_height="114dp"
        android:layout_marginTop="24dp"
        android:background="@drawable/business_bg"
        android:onClick="onHealthPressed"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.168"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_sports"
        app:srcCompat="@drawable/ic_health" />

    <ImageButton
        android:id="@+id/ib_entertainment"
        android:layout_width="114dp"
        android:layout_height="114dp"
        android:layout_marginBottom="256dp"
        android:background="@drawable/business_bg"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.654"
        app:layout_constraintStart_toEndOf="@+id/ib_health"
        app:layout_constraintTop_toBottomOf="@+id/tv_business"
        app:layout_constraintVertical_bias="0.571"
        app:srcCompat="@drawable/ic_entertainment" />

    <TextView
        android:id="@+id/tv_health"
        android:layout_width="114dp"
        android:gravity="center"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="Health"
        android:textStyle="bold"
        app:layout_constraintEnd_toStartOf="@+id/ib_entertainment"
        app:layout_constraintHorizontal_bias="0.364"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/ib_health" />

    <TextView
        android:id="@+id/tv_entertainment"
        android:layout_width="114dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:gravity="center"
        android:text="Entertainment"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.654"
        app:layout_constraintStart_toEndOf="@+id/tv_health"
        app:layout_constraintTop_toBottomOf="@+id/ib_entertainment" />


</androidx.constraintlayout.widget.ConstraintLayout>